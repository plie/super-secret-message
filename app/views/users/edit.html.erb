<div class="mt-5 container">
  <div class="p-3 mb-2 bg-dark text-white">
	<h1>Edit User</h1>


    <p>Edit your account information:</p>
    
    <%= form_for @user do |f| %>

    	<%= f.label :handle %>
    	<%= f.text_field :handle %>

    	<%= f.label :cell %>
    	<%= f.text_field :cell %>

    	<%= f.label :password %>
    	<%= f.password_field :password %>

    	<%= f.submit 'Submit' %>
    <% end %>

	</div>
</div>
